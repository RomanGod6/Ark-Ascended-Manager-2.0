<Page x:Class="Ark_Ascended_Manager.Views.Pages.RestorePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Ark_Ascended_Manager.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RestorePage">

    <Grid>
        <ListView Name="lvBackups">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Backup File" DisplayMemberBinding="{Binding FileName}" Width="400"/>
                    <GridViewColumn Header="Backup Date" DisplayMemberBinding="{Binding BackupDate}" Width="150"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button Content="Restore Selected Backup" VerticalAlignment="Bottom" Click="RestoreSelectedBackup_Click" Margin="258,0,0,400" Height="40"/>
    </Grid>
</Page>