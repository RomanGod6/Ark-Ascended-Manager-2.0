<Page x:Class="Ark_Ascended_Manager.Views.Pages.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <TextBlock Text="You are not running AAM as Administrator - issues may result from this."
                   FontSize="14"
                   FontWeight="Bold"
                   Padding="10"
                   Foreground="Red"
                   Visibility="{Binding AdminWarningVisibility}"
                   HorizontalAlignment="Center"
                   Margin="10" />

        <TextBlock Text="Coming Soon"
                   FontSize="24" 
                   FontWeight="Bold" />

        <Button Content="Run as Administrator"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Padding="10"
        Margin="20"
        IsEnabled="True"
        Visibility="{Binding AdminButtonVisibility}"
        Click="OnRunAsAdminClick"/>

    </Grid>
</Page>
