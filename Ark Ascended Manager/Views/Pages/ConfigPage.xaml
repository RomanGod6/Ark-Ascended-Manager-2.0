                                    <CheckBox IsChecked="{Binding ForceFlyerExplosives, Mode=TwoWay}" ToolTip="Toggle to enable or disable the use of explosives by flyers."/>
                                    <Label Content="Enable Extra Structure Prevention Volumes:" ToolTip="Toggle to enable or disable extra structure prevention volumes."/>
                                    <CheckBox IsChecked="{Binding EnableExtraStructurePreventionVolumes, Mode=TwoWay}" ToolTip="Toggle to enable or disable extra structure prevention volumes."/>
                                    <Label Content="Show Floating Damage Text:" ToolTip="Toggle to show or hide floating damage text in the game."/>
                                    <CheckBox IsChecked="{Binding ShowFloatingDamageText, Mode=TwoWay}" ToolTip="Toggle to show or hide floating damage text."/>
                                    <Label Content="Allow Hit Markers:" ToolTip="Toggle to allow or disallow hit markers in the game."/>
                                    <CheckBox IsChecked="{Binding AllowHitMarkers, Mode=TwoWay}" ToolTip="Toggle to allow or disallow hit markers."/>
                                    <Label Content="Server PvE:" ToolTip="Toggle to set the server mode to PvE."/>
                                    <CheckBox IsChecked="{Binding ServerPvE, Mode=TwoWay}" ToolTip="Toggle to set the server mode to PvE."/>
                                    <Label Content="Disable Photo Mode:" ToolTip="Toggle to enable or disable photo mode in the game."/>
                                    <CheckBox IsChecked="{Binding DisablePhotoMode, Mode=TwoWay}" ToolTip="Toggle to enable or disable photo mode."/>
                                    <Label Content="Prevent Spawn Animations:" ToolTip="If enabled turns off spawn animations when spawning."/>
                                    <CheckBox IsChecked="{Binding PreventSpawnAnimation, Mode=TwoWay}" ToolTip="If enabled turns off spawn animations when spawning."/>
                                    <Expander Header="Cryopod Settings" ToolTip="Settings for wildcard cryopods (Not Mods)">
                                        <StackPanel>
                                            <Label Content="Disable Cryopod Enemy Check:" ToolTip="Will ignore the enemy player/structure/dino checks."/>
                                            <CheckBox IsChecked="{Binding DisableCryopodEnemyCheck, Mode=TwoWay}" ToolTip="Will ignore the enemy player/structure/dino checks."/>
