                                    <CheckBox IsChecked="{Binding EnablePVEGamma, Mode=TwoWay}" ToolTip="Toggle to enable or disable gamma settings in PvE mode."/>



                                </StackPanel>
                            </Expander>
                            <Expander Header="Player Settings">
                                <StackPanel PreviewMouseWheel="ScrollViewer_PreviewMouseWheel">
                                    <Label Content="Generic XP Multiplier:" ToolTip="Set the multiplier for generic experience points (XP) gain."/>
                                    <TextBox Text="{Binding GenericXPMultiplier, Mode=TwoWay}" ToolTip="Enter the multiplier for generic XP gain."/>
                                    <Label Content="Player Damage Multiplier:" ToolTip="Set the multiplier for player damage."/>
                                    <TextBox Text="{Binding PlayerDamageMultiplier, Mode=TwoWay}" ToolTip="Enter the multiplier for player damage."/>
                                    <Label Content="Player Resistance Multiplier:" ToolTip="Set the multiplier for player resistance to damage."/>
                                    <TextBox Text="{Binding PlayerResistanceMultiplier, Mode=TwoWay}" ToolTip="Enter the multiplier for player resistance to damage."/>
                                    <Label Content="Player Character Food Drain Multiplier:" ToolTip="Set the multiplier for player character food drain rate."/>
                                    <TextBox Text="{Binding PlayerCharacterFoodDrainMultiplier, Mode=TwoWay}" ToolTip="Enter the multiplier for player character food drain rate."/>
                                    <Label Content="Player Character Water Drain Multiplier:" ToolTip="Set the multiplier for player character water drain rate."/>
