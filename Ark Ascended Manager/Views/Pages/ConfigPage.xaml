<Page x:Class="Ark_Ascended_Manager.Views.Pages.ConfigPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Ark_Ascended_Manager.Views.Pages"
      xmlns:vm="clr-namespace:Ark_Ascended_Manager.ViewModels.Pages"
      xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
     xmlns:helpers="clr-namespace:Ark_Ascended_Manager.Helpers" 
      
      Title="ConfigPage"
      d:DataContext="{d:DesignInstance Type=vm:ConfigPageViewModel, IsDesignTimeCreatable=True}"

      d:DesignHeight="1281.333"
      d:DesignWidth="800"
      ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
      ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
      Foreground="{DynamicResource TextFillColorPrimaryBrush}"
      mc:Ignorable="d">

    <Page.Resources>
        <!-- iPhone Style Toggle Switch -->
        <Style x:Key="iPhoneToggleSwitchStyle" TargetType="CheckBox">
            <Setter Property="Width" Value="50"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Background" Value="#E6E6E6"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Border Background="{TemplateBinding Background}" Width="{TemplateBinding Width}" Height="{TemplateBinding Height}" CornerRadius="15">
                            <Grid>
                                <Rectangle x:Name="SwitchBackground" Fill="Transparent" Width="48" Height="28" RadiusX="14" RadiusY="14"/>
                                <Ellipse x:Name="SwitchEllipse" Fill="White" Width="28" Height="28" HorizontalAlignment="Left"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="SwitchBackground" Property="Fill" Value="#4CD964"/>
                                <Setter TargetName="SwitchEllipse" Property="HorizontalAlignment" Value="Right"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <helpers:ListToStringConverter x:Key="ListToStringConverter" />
        
    </Page.Resources>

    <!-- Use a Grid as the single child of Page -->
    <Grid>


        <!-- Place all your other elements inside this Grid -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- For the header -->
            <RowDefinition Height="*"/>
            <!-- For the tab control -->
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right">
            <Label Content="{Binding CurrentServerConfig.ProfileName}" 
       FontWeight="Bold" 
       FontSize="16"
       RenderTransformOrigin="0.5,0.5" 
       Width="300" 
       Margin="5"/>

            <Button Content="Start Server" Command="{Binding StartServerCommand}" Margin="5"/>
            <Button Content="Stop Server" Margin="5" Command="{Binding StopServerCommand}"/>
            <Button Content="Wipe Server" Command="{Binding WipeServerCommand}" Margin="5"/>
            <Button Content="Update Server" Command="{Binding UpdateServerCommand}" Margin="5"/>
            <Button Content="Delete Server" Command="{Binding DeleteServerCommand}" Margin="5"/>
            <Button Content="Add New Schedule" Click="AddNewScheduleButton_Click"/>


        </StackPanel>

        <!-- TabControl for Server Settings -->
        <TabControl Grid.Row="1" Margin="10" PreviewMouseWheel="ScrollViewer_PreviewMouseWheel" >
            <TabItem Header="Config Settings" >
                <Grid>
                    <!-- The Grid will contain both the Button and the ScrollViewer -->
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- Row for the Button -->
                        <RowDefinition Height="*"/>
                        <!-- Row for the ScrollViewer -->
                    </Grid.RowDefinitions>
                    <!-- Save Button -->
                    <Button Content="Save Config Settings" 
    Command="{Binding SaveGameIniSettingsCommand}" 
    HorizontalAlignment="Right" 
    VerticalAlignment="Top"
    Margin="10"
    Grid.Row="0"/>
                    <StackPanel Orientation="Horizontal" Grid.Row="0">
                        <TextBox x:Name="SearchBoxGameIni" Width="200" Margin="5"/>
                        <Button Content="Search" Margin="5" Click="SearchButtonGameini_Click"/>
                    </StackPanel>
                    <!-- Save Button -->

                    <!-- ScrollViewer for the rest of the content -->
