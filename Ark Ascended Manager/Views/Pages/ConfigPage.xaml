                                        </StackPanel>
                                    </Expander>

                                    <Label Content="Allow Custom Recipes:" ToolTip="Toggle to allow or disallow custom recipes in the game."/>
                                    <CheckBox IsChecked="{Binding AllowCustomRecipes, Mode=TwoWay}" ToolTip="Toggle to allow or disallow custom recipes."/>
                                    <Label Content="Custom Recipe Effectiveness Multiplier:" ToolTip="Set the multiplier for custom recipe effectiveness."/>
                                    <TextBox Text="{Binding CustomRecipeEffectivenessMultiplier, Mode=TwoWay}" ToolTip="Enter the multiplier for custom recipe effectiveness."/>
                                    <Label Content="Custom Recipe Skill Multiplier:" ToolTip="Set the multiplier for custom recipe skill."/>
                                    <TextBox Text="{Binding CustomRecipeSkillMultiplier, Mode=TwoWay}" ToolTip="Enter the multiplier for custom recipe skill."/>
                                    <Label Content="NPC Network Stasis Range Scale Player Count Start:" ToolTip="Set the player count at which NPC network stasis range scaling starts."/>
                                    <TextBox Text="{Binding NPCNetworkStasisRangeScalePlayerCountStart, Mode=TwoWay}" ToolTip="Enter the player count at which NPC network stasis range scaling starts."/>
                                    <Label Content="NPC Network Stasis Range Scale Player Count End:" ToolTip="Set the player count at which NPC network stasis range scaling ends."/>
                                    <TextBox Text="{Binding NPCNetworkStasisRangeScalePlayerCountEnd, Mode=TwoWay}" ToolTip="Enter the player count at which NPC network stasis range scaling ends."/>
                                    <Label Content="NPC Network Stasis Range Scale Percent End:" ToolTip="Set the percentage at which NPC network stasis range scaling ends."/>
                                    <TextBox Text="{Binding NPCNetworkStasisRangeScalePercentEnd, Mode=TwoWay}" ToolTip="Enter the percentage at which NPC network stasis range scaling ends."/>
                                    <Label Content="Oxygen Swim Speed Stat Multiplier:" ToolTip="Set the multiplier for oxygen swim speed stat."/>
                                    <TextBox Text="{Binding OxygenSwimSpeedStatMultiplier, Mode=TwoWay}" ToolTip="Enter the multiplier for oxygen swim speed stat."/>
                                    <Label Content="Use Corpse Locator:" ToolTip="Toggle to enable or disable the use of the corpse locator."/>
                                    <CheckBox IsChecked="{Binding UseCorpseLocator, Mode=TwoWay}" ToolTip="Toggle to enable or disable the corpse locator."/>
                                    <Label Content="Fuel Consumption Interval Multiplier:" ToolTip="Set the multiplier for fuel consumption interval."/>
                                    <TextBox Text="{Binding FuelConsumptionIntervalMultiplier, Mode=TwoWay}" ToolTip="Enter the multiplier for fuel consumption interval."/>
                                    <Expander Header="Chat and Notifications" ToolTip="Settings for chat and player notifications.">
                                        <StackPanel>
                                            <Label Content="Always Notify Player Joined:" ToolTip="Toggle to always notify when a player joins the server."/>
                                            <CheckBox IsChecked="{Binding AlwaysNotifyPlayerJoined, Mode=TwoWay}" ToolTip="Toggle to always notify when a player joins the server."/>
                                            <Label Content="Always Notify Player Left:" ToolTip="Toggle to always notify when a player leaves the server."/>
                                            <CheckBox IsChecked="{Binding AlwaysNotifyPlayerLeft, Mode=TwoWay}" ToolTip="Toggle to always notify when a player leaves the server."/>
                                            <Label Content="Global Voice Chat:" ToolTip="Toggle to enable or disable global voice chat."/>
                                            <CheckBox IsChecked="{Binding GlobalVoiceChat, Mode=TwoWay}" ToolTip="Toggle to enable or disable global voice chat."/>
                                            <Label Content="Proximity Chat:" ToolTip="Toggle to enable or disable proximity chat."/>
                                            <CheckBox IsChecked="{Binding ProximityChat, Mode=TwoWay}" ToolTip="Toggle to enable or disable proximity chat."/>
                                        </StackPanel>
                                    </Expander>



                                </StackPanel>
                            </Expander>
                            <Expander Header="HUD and Visuals">
                                <StackPanel PreviewMouseWheel="ScrollViewer_PreviewMouseWheel">
                                    <Label Content="Server Crosshair:" ToolTip="Toggle to enable or disable the server crosshair."/>
                                    <CheckBox IsChecked="{Binding ServerCrosshair, Mode=TwoWay}" ToolTip="Toggle to enable or disable the server crosshair."/>
                                    <Label Content="Server Force No Hud:" ToolTip="Toggle to force no HUD (Heads-Up Display) on the server."/>
                                    <CheckBox IsChecked="{Binding ServerForceNoHud, Mode=TwoWay}" ToolTip="Toggle to force no HUD on the server."/>
                                    <Label Content="Show Map Player Location:" ToolTip="Toggle to show or hide player locations on the map."/>
                                    <CheckBox IsChecked="{Binding ShowMapPlayerLocation, Mode=TwoWay}" ToolTip="Toggle to show or hide player locations on the map."/>
                                    <Label Content="Allow Third Person Player:" ToolTip="Toggle to allow or disallow third-person view for players."/>
                                    <CheckBox IsChecked="{Binding AllowThirdPersonPlayer, Mode=TwoWay}" ToolTip="Toggle to allow or disallow third-person view for players."/>
                                    <Label Content="Show Floating Damage Text:" ToolTip="Toggle to show or hide floating damage text in the game."/>
                                    <CheckBox IsChecked="{Binding ShowFloatingDamageText, Mode=TwoWay}" ToolTip="Toggle to show or hide floating damage text."/>
                                    <Label Content="Allow Hit Markers:" ToolTip="Toggle to allow or disallow hit markers in the game."/>
                                    <CheckBox IsChecked="{Binding AllowHitMarkers, Mode=TwoWay}" ToolTip="Toggle to allow or disallow hit markers."/>
                                    <Label Content="Enable PVP Gamma:" ToolTip="Toggle to enable or disable adjusting gamma settings in Player vs. Player mode."/>
                                    <CheckBox IsChecked="{Binding EnablePVPGamma, Mode=TwoWay}" ToolTip="Toggle to enable or disable gamma settings in PVP mode."/>
