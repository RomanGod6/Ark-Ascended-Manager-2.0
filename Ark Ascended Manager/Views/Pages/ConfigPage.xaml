                                    <CheckBox IsChecked="{Binding BPvPDisableFriendlyFire, Mode=TwoWay}" ToolTip="Toggle to enable or disable friendly fire in PvP."/>
                                    <Label Content="Disable PvE Friendly Fire:" ToolTip="Disable friendly fire in Player vs. Environment scenarios."/>
                                    <CheckBox IsChecked="{Binding BPvEDisableFriendlyFire, Mode=TwoWay}" ToolTip="Toggle to enable or disable friendly fire in PvE."/>
                                    <Label Content="Disable Loot Crates:" ToolTip="Toggle to enable or disable loot crates in the game."/>
                                    <CheckBox IsChecked="{Binding DisableLootCrates, Mode=TwoWay}" ToolTip="Toggle to enable or disable the spawning of loot crates."/>
