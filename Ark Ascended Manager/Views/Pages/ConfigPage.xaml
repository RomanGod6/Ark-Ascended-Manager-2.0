                                    <CheckBox IsChecked="{Binding AllowCaveBuildingPvE, Mode=TwoWay}" ToolTip="Toggle to allow or disallow building structures in caves in PvE mode."/>
                                    <Label Content="Allow Cave Building PvP:" ToolTip="Toggle to allow or disallow building in caves in PvP mode."/>
                                    <CheckBox IsChecked="{Binding AllowCaveBuildingPvP, Mode=TwoWay}" ToolTip="Toggle to allow or disallow building structures in caves in PvP mode."/>
                                    <Label Content="Enable Singleplayer Settings:" ToolTip="Toggle to enable or disable Singleplayer settings. This auto increases certain rates to make it easier for smaller tribes."/>
                                    <CheckBox IsChecked="{Binding UseSingleplayerSettings, Mode=TwoWay}" ToolTip="Toggle to enable or disable Singleplayer settings. This auto increases certain rates to make it easier for smaller tribes."/>
                                    <Label Content="Allow Crate Spawns On Top Of Structures:" ToolTip="Toggle to allow or disallow crate spawns on top of structures."/>
                                    <CheckBox IsChecked="{Binding AllowCrateSpawnsOnTopOfStructures, Mode=TwoWay}" ToolTip="Toggle to allow or disallow crate spawns on top of structures."/>
                                    <Label Content="Enable Creative Mode:" ToolTip="Toggle to enable or disable Creative Mode."/>
                                    <CheckBox IsChecked="{Binding ShowCreativeMode, Mode=TwoWay}" ToolTip="Toggle to enable or disable Creative Mode."/>
                                    <Label Content="Enable Diseases:" ToolTip="Toggle to enable or disable diseases in the game."/>
                                    <CheckBox IsChecked="{Binding PreventDiseases, Mode=TwoWay}" ToolTip="Toggle to enable or disable diseases."/>
                                    <Label Content="Non-permanent Diseases:" ToolTip="Toggle to make diseases non-permanent."/>
                                    <CheckBox IsChecked="{Binding NonPermanentDiseases, Mode=TwoWay}" ToolTip="Toggle to make diseases non-permanent."/>
                                    <Label Content="Random Supply Crate Points:" ToolTip="Toggle to enable or disable random supply crate spawn points."/>
                                    <CheckBox IsChecked="{Binding RandomSupplyCratePoints, Mode=TwoWay}" ToolTip="Toggle to enable or disable random supply crate spawn points."/>
                                    <Label Content="Supply Crate Loot Quality Multiplier:" ToolTip="Set the multiplier for supply crate loot quality."/>
                                    <TextBox Text="{Binding SupplyCrateLootQualityMultiplier, Mode=TwoWay}" ToolTip="Enter the multiplier for supply crate loot quality."/>
                                    <Label Content="Fishing Loot Quality Multiplier:" ToolTip="Set the multiplier for fishing loot quality."/>
                                    <TextBox Text="{Binding FishingLootQualityMultiplier, Mode=TwoWay}" ToolTip="Enter the multiplier for fishing loot quality."/>
                                    <Label Content="Allow Unlimited Respec:" ToolTip="Toggle to allow unlimited respecs for characters."/>
                                    <CheckBox IsChecked="{Binding AllowUnlimitedRespec, Mode=TwoWay}" ToolTip="Toggle to allow unlimited character respecs."/>
                                    <Label Content="Allow Platform Saddle Multi-Floors:" ToolTip="Toggle to allow or disallow multiple floors on platform saddles."/>
                                    <CheckBox IsChecked="{Binding AllowPlatformSaddleMultiFloors, Mode=TwoWay}" ToolTip="Toggle to allow or disallow multiple floors on platform saddles."/>
                                    <Label Content="Max Platform Saddle Structure Limit:" ToolTip="Set the maximum structure limit for platform saddles."/>
                                    <TextBox Text="{Binding MaxPlatformSaddleStructureLimit, Mode=TwoWay}" ToolTip="Enter the maximum structure limit for platform saddles."/>
                                    <Label Content="Max Difficulty:" ToolTip="Instead of fixed difficulties such as Easy, Medium, and Hard, the difficulty is expressed using a number currently between 0.5 and 4.0[1] (or 5.0 in The Center). "/>
                                    <TextBox Text="{Binding MaxDifficulty, Mode=TwoWay}" ToolTip="Instead of fixed difficulties such as Easy, Medium, and Hard, the difficulty is expressed using a number currently between 0.5 and 4.0[1] (or 5.0 in The Center). "/>
                                    <Expander Header="Cluster Options" ToolTip="Settings for transferring characters, items, and dinos between clusters.">
                                        <StackPanel>
                                            <Label Content="No Tribute Downloads:" ToolTip="Toggle to prevent or allow tribute downloads between clusters."/>
                                            <CheckBox IsChecked="{Binding NoTributeDownloads, Mode=TwoWay}" ToolTip="Toggle to prevent or allow tribute downloads between clusters."/>
                                            <Label Content="Prevent Download Survivors:" ToolTip="Toggle to prevent or allow downloading survivors between clusters."/>
                                            <CheckBox IsChecked="{Binding PreventDownloadSurvivors, Mode=TwoWay}" ToolTip="Toggle to prevent or allow downloading survivors between clusters."/>
                                            <Label Content="Prevent Download Items:" ToolTip="Toggle to prevent or allow downloading items between clusters."/>
                                            <CheckBox IsChecked="{Binding PreventDownloadItems, Mode=TwoWay}" ToolTip="Toggle to prevent or allow downloading items between clusters."/>
                                            <Label Content="Prevent Download Dinos:" ToolTip="Toggle to prevent or allow downloading dinosaurs between clusters."/>
                                            <CheckBox IsChecked="{Binding PreventDownloadDinos, Mode=TwoWay}" ToolTip="Toggle to prevent or allow downloading dinosaurs between clusters."/>
                                        </StackPanel>
                                    </Expander>
                                    <Label Content="Increase PvP Respawn Interval Check Period:" ToolTip="Set the check period for increasing PvP respawn interval."/>
                                    <TextBox Text="{Binding IncreasePvPRespawnIntervalCheckPeriod, Mode=TwoWay}" ToolTip="Enter the check period for increasing PvP respawn interval."/>
                                    <Label Content="Increase PvP Respawn Interval Multiplier:" ToolTip="Set the multiplier for increasing PvP respawn interval."/>
                                    <TextBox Text="{Binding IncreasePvPRespawnIntervalMultiplier, Mode=TwoWay}" ToolTip="Enter the multiplier for increasing PvP respawn interval."/>
                                    <Label Content="Increase PvP Respawn Interval Base Amount:" ToolTip="Set the base amount for increasing PvP respawn interval."/>
                                    <TextBox Text="{Binding IncreasePvPRespawnIntervalBaseAmount, Mode=TwoWay}" ToolTip="Enter the base amount for increasing PvP respawn interval."/>
                                    <Label Content="Max Alliances Per Tribe:" ToolTip="Set the maximum number of alliances a tribe can have."/>
                                    <TextBox Text="{Binding MaxAlliancesPerTribe, Mode=TwoWay}" ToolTip="Enter the maximum number of alliances a tribe can have."/>
                                    <Label Content="Max Tribes Per Alliance:" ToolTip="Set the maximum number of tribes allowed in a single alliance."/>
                                    <TextBox Text="{Binding MaxTribesPerAlliance, Mode=TwoWay}" ToolTip="Enter the maximum number of tribes allowed in a single alliance."/>
                                    <Label Content="Increase PvP Respawn Interval:" ToolTip="Toggle to enable or disable increasing PvP respawn interval."/>
                                    <CheckBox IsChecked="{Binding IncreasePvPRespawnInterval, Mode=TwoWay}" ToolTip="Toggle to enable or disable increasing PvP respawn interval."/>
                                    <Label Content="Prevent Offline PvP Interval:" ToolTip="Set the interval for preventing offline PvP attacks."/>
                                    <TextBox Text="{Binding PreventOfflinePvPInterval, Mode=TwoWay}" ToolTip="Enter the interval for preventing offline PvP attacks."/>
                                    <Label Content="Prevent Offline PvP:" ToolTip="Toggle to prevent or allow offline PvP attacks."/>
                                    <CheckBox IsChecked="{Binding PreventOfflinePvP, Mode=TwoWay}" ToolTip="Toggle to prevent or allow offline PvP attacks."/>
                                    <Label Content="AutoPvE StartTime Seconds:" ToolTip="Set the start time for AutoPvE in seconds."/>
                                    <TextBox Text="{Binding AutoPvEStartTimeSeconds, Mode=TwoWay}" ToolTip="Enter the start time for AutoPvE in seconds."/>
                                    <Label Content="AutoPvE StopTime Seconds:" ToolTip="Set the stop time for AutoPvE in seconds."/>
                                    <TextBox Text="{Binding AutoPvEStopTimeSeconds, Mode=TwoWay}" ToolTip="Enter the stop time for AutoPvE in seconds."/>
                                    <Label Content="Max Number Of Players In Tribe:" ToolTip="Set the maximum number of players allowed in a tribe."/>
                                    <TextBox Text="{Binding MaxNumberOfPlayersInTribe, Mode=TwoWay}" ToolTip="Enter the maximum number of players allowed in a tribe."/>
                                    <Label Content="Tribe Name Change Cooldown:" ToolTip="Set the cooldown period for changing tribe names."/>
                                    <TextBox Text="{Binding TribeNameChangeCooldown, Mode=TwoWay}" ToolTip="Enter the cooldown period for changing tribe names."/>
                                    <Label Content="Tribe Slot Reuse Cooldown:" ToolTip="Set the cooldown period for reusing tribe slots."/>
                                    <TextBox Text="{Binding TribeSlotReuseCooldown, Mode=TwoWay}" ToolTip="Enter the cooldown period for reusing tribe slots."/>


                                    <Expander Header="PvE Tribe Warfare Options">
                                        <StackPanel>
                                            <Label Content="PvE Allow Tribe War:" ToolTip="Allow wars in PVE"/>
                                            <CheckBox IsChecked="{Binding PvEAllowTribeWar, Mode=TwoWay}" ToolTip="Allow wars in PVE"/>

                                            <Label Content="PvE Allow Tribe War Cancel:" ToolTip="Allow wars in to be cancelled in PVE"/>
