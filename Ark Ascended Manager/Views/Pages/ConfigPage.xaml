                                    <TextBox Text="{Binding PlayerCharacterStaminaDrainMultiplier, Mode=TwoWay}" ToolTip="Enter the multiplier for player character stamina drain rate."/>
                                    <Label Content="Max Fall Speed Multiplier:" ToolTip="Set the multiplier for the maximum fall speed."/>
                                    <TextBox Text="{Binding MaxFallSpeedMultiplier, Mode=TwoWay}" ToolTip="Enter the multiplier for the maximum fall speed."/>
