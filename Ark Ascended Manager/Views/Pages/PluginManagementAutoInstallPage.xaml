<Page x:Class="Ark_Ascended_Manager.Views.Pages.PluginManagementAutoInstallPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:Ark_Ascended_Manager.Views.Pages"
      Title="PluginManagementAutoInstallPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Servers Section -->
        <StackPanel Grid.Column="0">
            <TextBlock Text="Servers" HorizontalAlignment="Center" />
            <StackPanel x:Name="ServersStackPanel">
                <!-- Server checkboxes will be added here dynamically -->
            </StackPanel>
        </StackPanel>

        <!-- Plugins Section -->
        <StackPanel Grid.Column="1">
            <TextBlock Text="Plugins" HorizontalAlignment="Center" />
            <StackPanel x:Name="PluginsStackPanel">
                <!-- Plugin checkboxes will be added here dynamically -->
            </StackPanel>
        </StackPanel>

        <!-- Button to trigger installation -->
        <Button Content="Install" Click="InstallButton_Click" HorizontalAlignment="Center" Margin="0,10" />
    </Grid>


</Page>
